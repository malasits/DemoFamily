<div class="col-12" id="LoginFormContainer">
    <form>
        <div class="row">
            <div class="col-4 text-right">
                <label for="inputTextUsername">Felhasználónév:</label>
            </div>
            <div class="col-8">
                <input type="text" class="form-control text-center" ng-required="true"/>
            </div>
        </div>

        <div class="row">
            <div class="col-4 text-right">
                <label for="inputTextPassword">Jelszó:</label>
            </div>
            <div class="col-8">
                <input type="password" class="form-control text-center" ng-required="true"/>
            </div>
        </div>

        <div class="row">
            <div class="col-2"></div>
            <div class="col-8">
                <button type="submit" class="btn btn-secondary btn-block">
                    Bejelentkezés
                    <span ng-show="false" class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                </button>
            </div>
            <div class="col-2"></div>
        </div>
    </form>
</div>