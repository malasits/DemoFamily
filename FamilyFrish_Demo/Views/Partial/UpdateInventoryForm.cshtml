@using FamilyFrish_Demo.Resources;

<div class="col-12" id="UpdateInventoryContainer">
    <div class="row" id="UpdateInventoryInputsContainer">
        <div class="col-9">
            @*Inputs*@
            <div class="row">
                <div class="col-12">
                    <div class="input-group mb-3">
                        <input type="number" class="form-control" placeholder="Vonalkód">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="button" id="button-addon2">Src</button>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Cikkszám">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="button" id="button-addon2">Src</button>
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="input-group mb-3">
                        <input type="text" class="form-control" placeholder="Cikknév">
                        <div class="input-group-append">
                            <button class="btn btn-secondary" type="button" id="button-addon2">Src</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-3">
            @*Update button*@
            <div class="row">
                <button class="btn btn-block btn-secondary updateInventoryFunctionButtons" type="button" ng-click="asd2()">Felvitel</button>
            </div>
            @*Search button*@
            <div class=" row">
                <button class="btn btn-block btn-secondary updateInventoryFunctionButtons" type="button" ng-click="asd()">Keresés</button>
            </div>
        </div>
    </div>

    <div id="UpdateInventrorySpinner" ng-hide="true" class="d-flex justify-content-center">
        <div class="spinner-border customSpinner" role="status">
            <span class="sr-only">Loading...</span>
        </div>
    </div>

    <div class="row" id="itemResultContainer">
        <div class="col-12">
            <table class="table">
                <thead>
                    <tr>
                        <th>@Alapadatok.TableHeaderBarCode</th>
                        <th>@Alapadatok.TableHeaderItemNumber</th>
                        <th>@Alapadatok.TableHeaderItemName</th>
                        <th>@Alapadatok.TableHeaderItemCount</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="item in ItemModelList track by $index">
                        <td>{{item.barCode}}</td>
                        <td>{{item.itemNumber}}</td>
                        <td>{{item.itemName}}</td>
                        <td style="text-align:right;">{{item.itemCount}}</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>