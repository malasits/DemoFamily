<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Family friss demo app</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/LoginForm.css")
    @Styles.Render("~/Content/Site.css")
    <link href="~/Content/NavigationForm.css" rel="stylesheet" />
    <link href="~/Content/FunctionsForm.css" rel="stylesheet" />
    <link href="~/Content/InventoryRecordingForm.css" rel="stylesheet" />
    <link href="~/Content/UpdateInventoryForm.css" rel="stylesheet" />


    @Scripts.Render("~/Scripts/angular.min.js")
    <script src="~/Scripts/angular-ui/ui-bootstrap.min.js"></script>
    <script src="~/Scripts/angular-ui/ui-bootstrap-tpls.min.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    @Scripts.Render("~/Scripts/angular-messages.min.js")
    <script src="~/Scripts/angular-translate.min.js"></script>
    <script src="~/Scripts/i18n/angular-locale_FamilyFriss_hu.js"></script>

    @Scripts.Render("~/myScripts/Module.js")
    @Scripts.Render("~/myScripts/Service.js")
    @Scripts.Render("~/myScripts/Controller.js")
</head>
<body ng-app="demoApp" ng-controller="demoController">

    <div id="Wrapper" style="display:none;">
        <header>
            <nav class="navbar">
                <div class="navbar-brand">
                    <img src="~/Img/logo.jpg"/>
                </div>
                <div id="HeaderMessage" class="nav-item">
                    {{HeaderMessage}}
                    @*Ide kell majd a kijelentkező gomb*@
                </div>
            </nav>
        </header>

        <div class="container body-content">
            @RenderBody()
        </div>

    </div>

    <script type="text/javascript">
        window.onload = function () {
            document.getElementById("Wrapper").style.display = "block";
        }
    </script>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
